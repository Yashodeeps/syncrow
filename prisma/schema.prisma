generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  address       String   @unique
  name String
  professional_title String
  skills String[]
  bio String?
  avatar String?
  reviews Reviews[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Reviews{
  id            String   @id @default(uuid())
  user_id       String
  user User @relation(fields: [user_id], references: [id])
  name         String
  reviewer_address   String @unique
  job          String
  review        String
  nft         String @default("0x0")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

}
